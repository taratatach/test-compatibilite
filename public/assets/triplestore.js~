//ajoute un descripteur au triplestore ! facebook YEP
function addDescriptor(labelConcept, labelTag, uriTag, others) {
    $.ajax({
	url: '/jeu/add_tag',
	data: {
	    label_concept: labelConcept,
	    label_tag: labelTag,
	    uri_tag: uriTag,
	    others: others
	},
	cache: false,
	dataType: 'json',
	success: function(result){
	},
	error: function(error){
	}
    });
}

