//récupère tout les descripteurs d'un concept, par count décroissant ! stats YEP
function getDescriptors(label) {
    if (label == "cheval") {
        return ["testA", "testB", "testC"];
    }
    if (label == "chat") {
        return ["copainA", "copainB", "copainC"];
    }
    if (label == "mouton") {
        return ["youpiA", "youpiB", "youpiC"];
    }
}

