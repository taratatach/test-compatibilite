//récupère les 20 concepts du triplestore ! facebook YEP
function getConcepts(tab) {
    $.get("/jeu/get_concepts.json",function(json){
	var concepts = JSON.parse(json);
	for(var i=0; i < concepts.size; ++i) {
	    tab[i] = concepts[i]['label'];
	}
    });
}

